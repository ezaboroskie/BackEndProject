<html>
  <head>
    <link rel="stylesheet" href="/css/styles.css">
  </head>

  <body>
    <h1> Mental Wellbeing Goals and Comments </h1>
    <div>
      <ul>
        {{#mentalGoals}}
        <form method="POST" action="/delete-mhealth">
        <h2>{{goal}}</h2>
        <h3>{{description}}</h3>
        <button class="btn">Delete Goal</button>
        <input type="hidden" name="goalId" value={{id}} />
        </form>

        {{#notes}}
        {{body}}
        <form method="POST" action="/delete-note-mental">
            <input type="hidden" value={{id}} name="id" />
            <button>Remove Note</button>
        </form>
        {{/notes}}
        <form method="POST" action="/add-note-mental">
            <input required type="text" placeholder="Add note here" name="note" />
            <input type="hidden" name="id" value={{id}} />
            <button>Add Note</button>
        </form>

        {{/mentalGoals}}
      </ul>
    </div>
    <div id="mhealth-links">
      <a href="/add-mhealth"><h2>Add a Mental Health Goal</h2></a>
      <a href="/user"><h3>User Profile</h3></a>
      <a href= "/logout"><p>Logout</p></a>
    </div>
  </body>
</html>