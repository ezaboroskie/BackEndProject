<html>
  <head>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="page-header">
      <h1> Overall Health and Wellness Goals Here </h1>
    </div>
    <div>
      <ul>
        {{#userGoals}}
        <form method="POST" action="/delete-user-goal">
        <h2>{{goal}}</h2>
        <h3>{{description}}</h3>
        <button class="btn-remove">Delete Goal</button>
        <input type="hidden" name="goalId" value={{id}} />
        </form>
        {{#notes}}
        {{body}}
        <form method="POST" action="/delete-note-long">
            <input type="hidden" value={{id}} name="id" />
            <button class="btn-remove">Remove Note</button>
        </form>
        {{/notes}}
        <form method="POST" action="/add-note-long">
            <input required type="text" placeholder="Add note here" name="note" />
            <input type="hidden" name="id" value={{id}} />
            <button class="btn">Add Note</button>
        </form>
        {{/userGoals}}
      </ul>
    </div>
    <div class="home-links">

      <a href="/add-user-goal">
          <div class="l-links">
              <p>Add Long Term Goals</p>
          </div>
      </a>
      <a href="/user">
          <div class="m-links">
              <p>User Profile</p>
          </div>
      </a>
      <a href="/logout">
          <div class="l-logout">
              <p>Logout</p>
          </div>
      </a>
  
  </div>
    </body>
</html>

