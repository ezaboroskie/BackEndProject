<html>
  <head>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div>
      <h1> Overall Health and Wellness Goals Here </h1>
    </div>
    <div>
      <ul>
        {{#userGoals}}
        <form method="POST" action="/delete-user-goal">
        <h2>{{goal}}</h2>
        <h3>{{description}}</h3>
        <button>Delete Goal</button>
        <input type="hidden" name="goalId" value={{id}} />
        </form>
        {{#notes}}
        {{body}}
        <form method="POST" action="/delete-note-long">
            <input type="hidden" value={{id}} name="id" />
            <button>Remove Note</button>
        </form>
        {{/notes}}
        <form method="POST" action="/add-note-long">
            <input required type="text" placeholder="Add note here" name="note" />
            <input type="hidden" name="id" value={{id}} />
            <button>Add Note</button>
        </form>
        {{/userGoals}}
      </ul>
    </div>
    <div id="user-goal-links">
      <a href="/add-user-goal"><h2>Add a Long Term Goal</h2></a>
      <a href="/user"><h3>User Profile</h3></a>
      <a href= "/logout"><p>Logout</p></a>
    </div>
    </body>
</html>

